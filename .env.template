# AIRMS Supabase-Only Backend Configuration

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Supabase Features
ENABLE_REALTIME=true
ENABLE_SUPABASE_AUTH=true

# JWT Configuration (Optional - for custom auth if not using Supabase Auth)
JWT_SECRET_KEY=your_jwt_secret_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AIRMS Risk Agent API
HOST=0.0.0.0
PORT=8000
DEBUG=false

# API Key Configuration
API_KEY_PREFIX=rsk_
API_KEY_LENGTH=32

# Rate Limiting
DEFAULT_RATE_LIMIT=1000
RATE_LIMIT_WINDOW_HOURS=1

# Risk Detection
DEFAULT_RISK_THRESHOLD=5.0
MAX_INPUT_LENGTH=50000

# LLM Provider Configuration (Optional)
DEFAULT_LLM_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]
